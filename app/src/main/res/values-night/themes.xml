<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Qck" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="tint">@color/white</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:fontFamily">@font/droid_sans</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="containerBackground">@color/black</item>
    </style>

    <style name="ContainerStyle" parent="Base.Theme.Qck">
        <item name="android:background">?attr/containerBackground</item>
    </style>
</resources>